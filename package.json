{
  "name": "royalty-invoicer",
  "private": true,
  "workspaces": ["server", "client"],
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"npm:dev --workspace server\" \"npm:dev --workspace client\"",
    "build": "npm run build --workspace server && npm run build --workspace client",
    "test:server": "npm test --workspace server",
    "test:client": "npm test --workspace client",
    "cypress": "npm run cypress --workspace client"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
